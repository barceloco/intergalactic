# Lego environment configuration
# This file is loaded by the renewal script

# ACME CA server (staging or production)
{% if cert_issuer_ca_server == 'staging' %}
LEGO_CA_SERVER=https://acme-staging-v02.api.letsencrypt.org/directory
{% else %}
LEGO_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory
{% endif %}

# Email for Let's Encrypt registration
LEGO_EMAIL={{ cert_issuer_email }}

# Domain(s) to obtain certificate for
{% if cert_issuer_wildcard %}
LEGO_DOMAINS=*.{{ cert_issuer_domain }},{{ cert_issuer_domain }}
{% else %}
LEGO_DOMAINS={{ cert_issuer_domain }}
{% endif %}

# DNS provider
LEGO_DNS=godaddy

# Path to lego data directory (inside container - /lego is the binary, so use /data)
LEGO_PATH=/data

# Renewal threshold (days before expiry)
LEGO_RENEW_DAYS={{ cert_issuer_renew_days }}

# GoDaddy DNS propagation settings
GODADDY_PROPAGATION_TIMEOUT={{ cert_issuer_godaddy_propagation_timeout }}
GODADDY_POLLING_INTERVAL={{ cert_issuer_godaddy_polling_interval }}
GODADDY_TTL={{ cert_issuer_godaddy_ttl }}
