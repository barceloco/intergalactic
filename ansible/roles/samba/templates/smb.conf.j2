[global]
   workgroup = WORKGROUP
   server string = {{ hostname | default(inventory_hostname) }} Samba Server
   server role = standalone server
   security = user
   passdb backend = tdbsam
   unix password sync = yes
   pam password change = yes
   map to guest = Bad User
   dns proxy = no
   log file = /var/log/samba/log.%m
   max log size = 1000
   syslog = 0
   panic action = /usr/share/samba/panic-action %d

[armand]
   comment = Armand's Home Share
   path = /home/armand/samba
   valid users = armand
   read only = no
   create mask = 0644
   directory mask = 0755
   force user = armand
   force group = armand
