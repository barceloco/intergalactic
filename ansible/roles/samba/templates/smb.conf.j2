[global]
   workgroup = WORKGROUP
   server string = {{ hostname | default(inventory_hostname) }} Samba Server
   server role = standalone server
   security = user
   passdb backend = tdbsam
   # Samba uses its own password database, but syncs with system passwords
   # Users must be added to Samba database (done by Ansible tasks)
   # Password is set from samba_armand_password in all_secrets.yml
   # Future system password changes will sync to Samba (unix password sync = yes)
   unix password sync = yes
   pam password change = yes
   obey pam restrictions = yes
   map to guest = Never
   guest account = nobody
   dns proxy = no
   log file = /var/log/samba/log.%m
   max log size = 1000
   syslog = 0
   panic action = /usr/share/samba/panic-action %d
   # Security: require SMB2+ protocol
   min protocol = SMB2

[armand]
   comment = Armand's Share (crypt directory)
   path = /crypt
   valid users = armand
   guest ok = no
   read only = no
   create mask = 0644
   directory mask = 0755
   force user = armand
   force group = armand
